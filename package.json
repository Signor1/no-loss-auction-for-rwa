{
  "name": "no-loss-auction-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "No Loss Auction dApp for Real World Asset (RWA) Tokenization",
  "scripts": {
    "dev": "pnpm --parallel --stream dev",
    "dev:frontend": "pnpm --filter @no-loss-auction/frontend dev",
    "dev:backend": "pnpm --filter @no-loss-auction/backend dev",
    "build": "pnpm --recursive build",
    "build:frontend": "pnpm --filter @no-loss-auction/frontend build",
    "build:backend": "pnpm --filter @no-loss-auction/backend build",
    "build:contracts": "pnpm --filter @no-loss-auction/contracts build",
    "test": "pnpm --recursive test",
    "test:contracts": "pnpm --filter @no-loss-auction/contracts test",
    "test:frontend": "pnpm --filter @no-loss-auction/frontend test",
    "test:backend": "pnpm --filter @no-loss-auction/backend test",
    "lint": "pnpm --recursive lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,sol}\"",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "deploy:contracts": "pnpm --filter @no-loss-auction/contracts deploy"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "turbo": "^1.11.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
