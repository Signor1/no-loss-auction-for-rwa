# ========================================
# Base Network Configuration
# ========================================

# Base Mainnet RPC URL
BASE_RPC_URL=https://mainnet.base.org
BASE_WS_URL=wss://mainnet.base.org

# Base Sepolia Testnet RPC URL
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASE_SEPOLIA_WS_URL=wss://sepolia.base.org

# ========================================
# Basescan API Configuration
# ========================================

# Get your API key from https://basescan.org/apis
BASESCAN_API_KEY=your_basescan_api_key_here
NEXT_PUBLIC_BASESCAN_API_KEY=your_basescan_api_key_here

# ========================================
# Contract Addresses (Base Mainnet)
# ========================================

BASE_AUCTION_CONTRACT=0x...
BASE_ASSET_CONTRACT=0x...
BASE_PAYMENT_CONTRACT=0x...
BASE_USER_CONTRACT=0x...

# ========================================
# Contract Addresses (Base Sepolia)
# ========================================

BASE_SEPOLIA_AUCTION_CONTRACT=0x...
BASE_SEPOLIA_ASSET_CONTRACT=0x...
BASE_SEPOLIA_PAYMENT_CONTRACT=0x...
BASE_SEPOLIA_USER_CONTRACT=0x...

# ========================================
# Private Keys (Backend Only - NEVER COMMIT)
# ========================================

# Private key for backend transactions (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# ========================================
# Chain ID Configuration
# ========================================

# Base Mainnet: 8453
# Base Sepolia: 84532
NEXT_PUBLIC_CHAIN_ID=8453
DEFAULT_CHAIN_ID=8453

# ========================================
# Analytics Configuration
# ========================================

# Enable analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=true
ENABLE_ANALYTICS=true

# ========================================
# Frontend Configuration
# ========================================

NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# ========================================
# Backend Configuration
# ========================================

PORT=3001
NODE_ENV=development

# ========================================
# Database Configuration
# ========================================

DATABASE_URL=postgresql://user:password@localhost:5432/no_loss_auction
REDIS_URL=redis://localhost:6379

# ========================================
# IPFS Configuration
# ========================================

PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key

# ========================================
# Security
# ========================================

JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
